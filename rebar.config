{deps, [
	grisp,
	{epmd, {git, "https://github.com/erlang/epmd", {ref, "4d1a59"}}}	
]}.

{erl_opts, [debug_info]}.

{grisp, [
    {otp, [
        {version, "22.0.4"}
    ]},
    {deploy, [
        {pre_script, "rm -rf /Volumes/GRISP/*"},     
        {destination, "/Volumes/GRISP"},
        {post_script, "diskutil eject /Volumes/GRISP"}
    ]}
]}.

{shell, [{apps, []}]}.

{relx, [
    {release, {okbeamer, "0.1.0"}, [
    	{epmd, none},
    	okbeamer,
    	inets,
    	runtime_tools
    ]}
]}.
